<%
=begin%>
 <% if button_path == root_path %>

    <% @all_anime.each do |anime| %>
      <div class="container">
            <div class="container">
                <div class="card mb-3" >
                    <div class="row g-0">
                        <div class="col-md-2">
                            <%= image_tag anime["attributes"]["posterImage"]["original"] , class: "rounded-start", 
                            style: "height: 300px; width: 200px;"%>
                        </div>
                        <div class="col-md-10">
                            <div class="container">
                                <div class="card-body">
                                    <h5 class="card-title"><%= anime["attributes"]["titles"]["en_jp"] %></h5>
                                    <p class="badge text-bg-success"><%= anime["attributes"]["status"] %></p>
                                    <p class="card-text"><%= anime["attributes"]["synopsis"].truncate_words(40) %></p>
                                    <p class="card-text">
                                        <span class="badge text-bg-primary mr-2"><%= anime["attributes"]["ageRating"] %></span>
                                        <span class="badge text-bg-secondary"><%= anime["attributes"]["subtype"] %></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
      </div>
    <% end %>
    <div class="container">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-end">
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
                <li class="page-item">
                    <%= link_to "Next", button_path , class: "page-link" %>
                </li>
            </ul>
        </nav>
    </div>
